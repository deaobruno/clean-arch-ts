{
  "name": "clean-arch-ts",
  "version": "0.0.1",
  "description": "RESTful API example designed following Clean Architecture principles",
  "main": "src/app.js",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "start": "npm run build && cross-env NODE_ENV=production node dist/app.js",
    "dev": "cross-env NODE_ENV=development nodemon src/app.ts",
    "debug": "cross-env NODE_ENV=debug nodemon src/app.ts",
    "test": "nyc mocha -r ts-node/register test/**/*.test.ts --recursive --exit",
    "test:unit": "nyc mocha -r ts-node/register test/unit/**/*.test.ts --recursive --exit",
    "test:integration": "nyc mocha -r ts-node/register test/integration/**/*.test.ts --recursive --exit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Bruno Oliveira",
  "license": "",
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@types/bcrypt": "5.0.2",
    "@types/chai": "4.3.16",
    "@types/cors": "2.8.17",
    "@types/dotenv-safe": "8.1.6",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "9.0.6",
    "@types/mocha": "10.0.6",
    "@types/node": "20.14.2",
    "@types/sinon": "17.0.3",
    "@typescript-eslint/eslint-plugin": "7.12.0",
    "@typescript-eslint/parser": "7.12.0",
    "chai": "4.4.1",
    "cross-env": "7.0.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.11",
    "lint-staged": "15.2.5",
    "mocha": "10.4.0",
    "nodemon": "3.1.3",
    "nyc": "17.0.0",
    "prettier": "3.3.1",
    "sinon": "18.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "axios": "1.7.2",
    "bcrypt": "5.1.1",
    "cors": "2.8.5",
    "dotenv-safe": "9.1.0",
    "express": "4.19.2",
    "express-mongo-sanitize": "2.2.0",
    "helmet": "7.1.0",
    "joi": "17.13.1",
    "jsonwebtoken": "9.0.2",
    "mongodb": "6.7.0",
    "pino": "9.1.0",
    "pino-pretty": "11.2.0",
    "redis": "4.6.14",
    "xss-clean": "0.1.4"
  }
}
