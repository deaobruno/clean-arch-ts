    "faker": "^5.5.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "sinon": "^15.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
